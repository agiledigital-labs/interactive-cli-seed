{
  "name": "interactive-cli-seed",
  "version": "1.0.0",
  "description": "Seed project to create interactive cli tools",
  "main": "index.js",
  "private": "true",
  "author": {
    "name": "Sam Murphy",
    "email": "stmurphy@agiledigital.com.au",
    "url": "https://agiledigital.com.au"
  },
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production rollup -c --environment BUILD:production",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives",
    "start": "NODE_ENV=development rollup -c",
    "watch": "npm run start -- -w",
    "type-coverage": "type-coverage",
    "test": "jest",
    "mutation-test": "stryker run"
  },
  "dependencies": {
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "colors": "^1.4.0",
    "inquirer": "^8.0.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^6.4.1",
    "@stryker-mutator/jest-runner": "^6.4.1",
    "@stryker-mutator/typescript-checker": "^6.4.1",
    "@types/clear": "^0.1.1",
    "@types/clui": "^0.3.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.18.16",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-agile-digital": "^2.8.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-typed-fp": "^4.4.0",
    "eslint-plugin-functional": "^5.0.6",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^40.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-total-functions": "^6.8.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "rollup": "^2.45.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^29.0.5",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "type-coverage": "^2.24.1",
    "typescript": "^4.9.5"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreCatch": false,
    "strict": true,
    "detail": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
