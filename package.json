{
  "name": "interactive-cli-seed",
  "version": "1.0.0",
  "description": "Seed project to create interactive cli tools",
  "main": "index.js",
  "private": "true",
  "author": {
    "name": "Sam Murphy",
    "email": "stmurphy@agiledigital.com.au",
    "url": "https://agiledigital.com.au"
  },
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production rollup -c --environment BUILD:production",
    "lint": "eslint src --ext .ts,.tsx",
    "start": "NODE_ENV=development rollup -c",
    "watch": "npm run start -- -w",
    "type-coverage": "type-coverage",
    "test": "jest",
    "mutation-test": "stryker run"
  },
  "dependencies": {
    "@colors/colors": "^1.5.0",
    "clear": "^0.1.0",
    "clui": "^0.3.6",
    "inquirer": "^8.2.4",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^6.0.2",
    "@stryker-mutator/jest-runner": "^6.0.2",
    "@stryker-mutator/typescript-checker": "^6.0.2",
    "@typed/fp": "^0.14.0",
    "@types/clear": "^0.1.2",
    "@types/clui": "^0.3.1",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typed-fp": "^2.0.1",
    "eslint-plugin-functional": "^4.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.2",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-total-functions": "^5.0.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rollup": "^2.74.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^28.0.3",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "type-coverage": "^2.21.1",
    "typescript": "^4.7.2"
  },
  "typeCoverage": {
    "atLeast": 100,
    "ignoreCatch": false,
    "strict": true,
    "detail": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
